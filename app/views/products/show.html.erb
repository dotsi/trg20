<% content_for :side do %>
  <%= image_tag @product.manufacturer.image.url(:thumb) %>
  <%= image_tag @product.pdf.url %>
  <br />
  <%=h @product.manufacturer.name %>
<% end %>

<p>
  <b>Name:</b>
  <%=h @product.name %>
</p>
<p>
  <b>Description:</b>
  <%=h @product.description %>
</p>
<p>
  <b>Kategorija:</b>
  <%=h @product.categories.first.name %>
</p>

<p>
	<%= image_tag @product.image.url(:thumb) %>
</p>

<p>
  <b>Size:</b>
  <%=h @product.size %>
</p>

<p>
  <b>Price:</b>
  <%=h number_to_currency(@product.price) %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
