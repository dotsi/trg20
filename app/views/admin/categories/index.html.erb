<h1>Kategorije</h1>
<p>
	<% for category in @categories %>
		<% if category.root? %>
		<li><%= link_to h(category.name), admin_category_path(category) %>
			<small>[<%= link_to 'Izbriši', [:admin, category], :confirm => 'Ali ste prepričani?', :method => :delete %>]</small>
		</li>
		<% end %>
	<% end %>
</p>

<%= link_to 'Nazaj', admin_categories_path %>
<%= link_to 'Nova kategorija', new_admin_category_path%>

